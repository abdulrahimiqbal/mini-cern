{
  "name": "mini-cern",
  "version": 2,
  "buildCommand": "cd dashboard/frontend && npm install && npm run build",
  "outputDirectory": "dashboard/frontend/dist",
  "framework": "vite",
  "installCommand": "cd dashboard/frontend && npm install",
  "devCommand": "cd dashboard/frontend && npm run dev",
  "functions": {
    "api/health.js": {
      "runtime": "nodejs18.x"
    },
    "api/dashboard.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/health",
      "destination": "/api/health"
    },
    {
      "source": "/api/dashboard/overview",
      "destination": "/api/dashboard"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
} 